# OpenAI API Key (only required if ENABLE_GPT_SIMPLIFICATION=true)
# Get this from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# ElevenLabs API Key (required)
# Get this from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
# Voice ID from ElevenLabs (default is Eric)
# Browse voices at: https://elevenlabs.io/voice-library
ELEVENLABS_VOICE_ID=cjVigY5qzO86Huf0OWal

# Application Settings
OUTPUT_DIR=output
POLL_INTERVAL_SECONDS=1
RUN_MODE=continuous

# Playback volume (0.0-1.0, where 0.0 is silent and 1.0 is max)
# Default: 0.5 (50% volume)
PLAYBACK_VOLUME=0.5

# Enable GPT simplification for song titles (true/false)
# When enabled, uses ChatGPT to simplify complex classical music titles
# When disabled, uses original song and artist names (saves API costs)
ENABLE_GPT_SIMPLIFICATION=true

# Debug mode (true/false)
# When enabled, logs to terminal. When disabled, only logs to tysa.log file
DEBUG=false
